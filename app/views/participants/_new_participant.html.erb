<div class="new-participant-container" id="new-participant-container">
	<div class="new-participant-panel">
		<%= button_tag(class: 'close-btn', id: 'close-btn') do %>
			<%= material_icon.clear %>
		<% end %>

		<div class="new-participant-title">
			Creating a new user...
		</div>
		
		<div class="new-participant-form-group">
			<%= form_for @participant, class: 'new-participant-form-group' do |f| %>
				<div class="new-participant-row", id="new-participant-name-row">
					<%= f.label :name, class: 'new-participant-label' %>
					<%= f.text_field :name, class: 'new-participant-input', id: 'new-participant-name' %>
				</div>
				
				<div class="new-participant-row", id="new-participant-email-row">
					<%= f.label :email, class: 'new-participant-label' %>
					<%= f.text_field :email, class: 'new-participant-input', id: 'new-participant-email' %>
				</div>

				<div class="new-participant-row", id="new-participant-contact-row">
					<%= f.label 'Phone Number', class: 'new-participant-label' %>
					<%= f.text_field :phone_num, class: 'new-participant-input', id: 'new-participant-contact' %>
				</div>

				<div class="new-participant-row">
					<%= f.check_box :sponsor, class: 'checkbox' %>
					<%= f.label "Sponsor", class: 'sponsor-label'%>
				</div>
				
				<%= f.submit 'Create Participant', class: 'c-btn disabled-btn' %>
			<% end %>
		</div>
	</div>
</div>