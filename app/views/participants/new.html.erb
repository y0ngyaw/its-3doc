<div class="container">
	<div class="title">
		Create A New Participant
	</div>

	<%= form_for @participant, class: 'form-group' do |f| %>
		<%= f.label :name, class: 'form-label' %>
		<%= f.text_field :name, class: 'form-input' %>

		<%= f.label :email, class: 'form-label' %>
		<%= f.text_field :email, class: 'form-input' %>

		<%= f.label :password, class: 'form-label' %>
		<%= f.password_field :password, class: 'form-input' %>

		<%= f.label :password_confirmation, class:'form-label' %>
		<%= f.password_field :password, class: 'form-input' %>

		<%= f.label 'Phone Number', class: 'form-label' %>
		<%= f.text_field :phone_num, class: 'form-input' %>

		<%= f.submit 'Create User', class: 'form-submit-button' %>
	<% end %>

</div>

